{
    "name": "@vamship/generator-javascript",
    "version": "1.3.2",
    "description": "Yeoman generator for javascript projects",
    "homepage": "",
    "author": {
        "name": "Vamshi K Ponnapalli",
        "email": "vamshi.ponnapalli@gmail.com",
        "url": ""
    },
    "files": [
        "generators",
        "utils"
    ],
    "main": "generators/index.js",
    "keywords": [
        "generators",
        "javascript",
        "utils",
        "yeoman-generator"
    ],
    "devDependencies": {
        "yeoman-test": "^1.9.1",
        "yeoman-assert": "^3.1.1",
        "eslint": "^5.13.0",
        "prettier": "^1.16.4",
        "husky": "^1.3.1",
        "lint-staged": "^8.1.3",
        "eslint-config-prettier": "^4.0.0",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-config-xo": "^0.26.0",
        "jest": "^24.1.0"
    },
    "engines": {
        "npm": ">= 4.0.0"
    },
    "dependencies": {
        "camelcase": "^5.0.0",
        "chalk": "^2.4.2",
        "yeoman-generator": "^3.2.0",
        "yosay": "^2.0.2"
    },
    "jest": {
        "testEnvironment": "node"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "git add"
        ],
        "*.json": [
            "prettier --write",
            "git add"
        ],
        "ignore": [
            "generators/api/templates/package.json",
            "generators/api/templates/Gruntfile.js",
            "generators/cli/templates/package.json",
            "generators/cli/templates/Gruntfile.js",
            "generators/lib/templates/package.json",
            "generators/lib/templates/Gruntfile.js",
            "generators/ui/templates/package.json",
            "generators/ui/templates/Gruntfile.js"
        ]
    },
    "eslintConfig": {
        "extends": [
            "xo",
            "prettier"
        ],
        "env": {
            "jest": true,
            "node": true
        },
        "rules": {
            "prettier/prettier": [
                "error",
                {
                    "singleQuote": true,
                    "printWidth": 90
                }
            ]
        },
        "plugins": [
            "prettier"
        ]
    },
    "scripts": {
        "pretest": "eslint .",
        "precommit": "lint-staged",
        "test": "jest"
    },
    "repository": "vamship/generator-javascript",
    "license": "MIT"
}
