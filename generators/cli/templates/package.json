{
    "name": "<%= projectNamespacedName %>",
    "version": "<%= projectVersion %>",
    "description": "<%= projectDescription %>",
    "bin": {
        "<%= projectCliName %>": "bin/<%= projectName %>.js"
    },
    "scripts": {
        "all": "gulp --series format lint test-unit clean",
        "test": "gulp test-unit"
    },
    "files": ["package.json", "LICENSE", "README.md", "src/**/*", "bin/**/*"],
    "keywords": <%- JSON.stringify(projectKeywords) %>,
    "author": "<%= authorName %> <<%= authorEmail %>>",
    "license": "MIT",
    "devDependencies": {
        "@vamship/build-utils": "0.1.2",
        "@vamship/test-utils": "^2.4.8",
        "ansi-colors": "^4.1.1",
        "chai": "^4.2.0",
        "chai-as-promised": "^7.1.1",
        "docdash": "^1.1.1",
        "gulp": "^4.0.2",
        "gulp-jsdoc3": "^2.0.0",
        "mocha": "^7.0.0",
        "nyc": "^15.0.0",
        "rewire": "^4.0.1",
        "sinon": "^8.0.4",
        "sinon-chai": "^3.4.0"
    },
    "dependencies": {
        "@vamship/config": "^1.4.5",
        "@vamship/logger": "^4.2.5",
        "bluebird": "^3.7.2",
        "yargs": "^15.1.0"
    },
    "repository": {
        "type": "git",
        "url": "https://<%= gitUrl %>.git"
    },
    "bugs": {
        "url": "https://<%= gitUrl %>/issues"
    },
    "homepage": "https://<%= gitUrl %>#readme",
    "buildMetadata": {
        "projectType": "cli",
<% if(dockerRequired) {-%>
        "language": "js",
        "docker": {
<%   if(dockerFullRepo) {-%>
            "repo": "<%= dockerFullRepo %>"
<%   } else if(dockerCustomRegistry) {-%>
            "registry": "<%= dockerCustomRegistry %>"
<%   }-%>
        }
<% } else {-%>
        "language": "js"
<% }-%>
    }
}
